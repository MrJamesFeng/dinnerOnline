/* pages/home/home.wxss */

page {
  /*禁止page滚动  */
  height: 100%;
  overflow: hidden;
}

.container {
  /*禁止page滚动  */
  height: 100%;
  overflow: hidden;
}

/*顶部  */

.header {
  position: relative;
  background-color: #58401f;
  padding: 20rpx 40rpx;
  border: 1px solid #3f2706;
  transition: all 3s ease-in-out;
}

.hidden {
  margin-top: -290rpx;
}

.header view {
  font-size: 36rpx;
  color: white;
}

.logo {
  float: left;
  margin-right: 10px;
}

.logo image {
  float: left;
  width: 160rpx;
  height: 160rpx;
  border: 2rpx solid #fff;
  border-radius: 50%;
  margin-right: 10px;
}

.shop {
  padding-top: 20rpx;
  line-height: 60rpx;
  font-size: 36rpx;
  color: white;
}

.proclamation {
  color: #333;
  font-size: 30rpx;
  line-height: 70rpx;
}

.line {
  clear: both;
  height: 1px;
  border-bottom: 1px dashed #000;
  padding-top: 20rpx;
  width: 100%;
}

.notice {
  color: #333;
  padding-top: 20rpx;
  line-height: 40rpx;
  font-size: 30rpx;
}

/* content */

.content {
  height: 100%;
  display: flex;
  box-sizing: border-box;
  padding-bottom: 100rpx;
}

.classify-container {
  width: 180rpx;
  background: #efefef;
  height: 100%;
}

.classify {
  padding: 50rpx 30rpx;
  text-align: center;
  border-bottom: 1px dashed #aaa;
}

.name {
  display: inline-block;
  font-size: 30rpx;
  color: #646464;
  line-height: 1.2;
  text-align: left;
  pointer-events: none;
}

.actived {
  background: #fff;
}

.content-container {
  background: #fff;
  height: 100%;
  flex: 1;
}

.goodsItem-classifyName {
  padding: 20rpx 25rpx;
  color: #646464;
  font-size: 30rpx;
  line-height: 30rpx;
  background: #f7f7f7;
}

.goodItem-img {
  width: 180rpx;
  height: 130rpx;
}

.goodItem-container {
  position: relative;
  flex-direction: row;
  padding: 20rpx 30rpx;
  font-size: 36rpx;
  line-height: 40rpx;
  border-bottom: 1px solid #f7f7f7;
}

.goodItem-left {
  float: left;
  width: 180rpx;
  height: 130rpx;
  margin-right: 20rpx;
}

.currentGoodItem-name {
  color: #000;
  font-size: 36rpx;
  line-height: 46rpx;
}

.currentGoodItem-sold {
  color: #989898;
  font-size: 30rpx;
  line-height: 46rpx;
}

.currentGoodItem-price {
  color: #f45044;
  font-size: 36rpx;
  line-height: 46rpx;
}

.goodItem-right {
  position: relative;
  width: 100%;
}

.goodItem-info {
  display: flex;
  flex-direction: column;
}

.currentGoodItem-add-container {
  background-color: #feb70f;
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  width: 64rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  border-radius: 50%;
}

.currentGoodItem-add {
  pointer-events: none;
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  width: 24rpx;
  height: 24rpx;
}

/*购物车 */

.cart-container {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  z-index: 100;
}

.cart-data {
  flex: 1;
}

.cart {
  width: 100rpx;
  height: 100rpx;
  background: #58401f;
  border-radius: 50%;
  margin-left: 40rpx;
  margin-top: -20rpx;
  position: relative;
  text-align: center;
}

.cart-img {
  height: 70rpx;
  width: 70rpx;
  margin-top: 15rpx;
}

.comformOderBtn {
  width: 200rpx;
  height: 100%;
  background: #58401f;
  color: white;
  font-size: 40rpx;
  /* appearance 将按钮设置成为iOS原生样式 */
  -webkit-appearance: none;
  border-radius: 0;
}

.total-price {
  position: absolute;
  left: 70rpx;
  top: -10rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  padding: 0 12rpx;
  background: #f45044;
  color: #fff;
  border-radius: 20rpx;
}

/*购物车详情  */

.cartsDetail-container {
  position: absolute;
  bottom: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
}

.cartsDetailMask {
  height: 100%;
  position: absolute;
  width: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.7);
}

.cartsDetail-box {
  position: absolute;
  bottom: 100rpx;
  left: 0;
  width: 100%;
  padding: 30rpx 0;
  background: #f7f7f7;
}

.cartsDetail {
  display: flex;
  flex-direction: row;
  background: #f7f7f7;
  margin-top: 10rpx;
  align-content: center;
}

.goodsTitle {
  flex: 1;
}

.priceInfo {
  /* width: 220rpx; */
  display: flex;
  flex-direction: row;
}

.price {
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.num {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
}

.delete, .add {
  line-height: 50rpx;
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  background-color: #feb70f;
  padding: 5rpx;
  border-radius: 50%;
}
